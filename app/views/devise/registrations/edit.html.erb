




<div class="wrapperrn" id="wrapperrn">
      <div class="row">
        <div class="col-12 col-md-3 col-lg-4"></div>
        <div class="col-12 col-md-6 col-lg-4">
          <br>
          <div class="container">
                <div class="card opacity" style="margin-top:200px;">
                  <div class="card-body">  
                      <p class="text-center" style="font-size:14px"><%= current_user.name%>님 회원 정보를 수정하시겠어요?</p>
                      <br>
                            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
                          
                            
                              <div class="form-group">
                                <%= f.label :name ,"이 름",class: "control-label"%><br />
                                <%= f.text_field :name, autofocus: true, class: "form-control", id: "name_input" %>
                              </div>
                              <div class="form-grop">
                                <%= f.label :email ,"이메일",class: "control-label"%><br />
                                <%= f.email_field :email, autofocus: true, class: "form-control", id: "email_input" %>
                              </div>

                              <div class="form-grop">
                                <%= f.label :password ,"비밀번호(빈칸으로 두면 바뀌지 않습니다.)",class: "control-label"%><br />
                              <%= f.password_field :password, autocomplete: "off", required: false, class: "form-control" %>
                              </div>
                              <div class="form-grop">
                                <%= f.label :password_confirmation,"비밀번호 확인" ,class: "control-label"%><br />
                              <%= f.password_field :password_confirmation, required: false, class: "form-control" %>
                              </div>
                              <div class="form-grop">
                                <%= f.label :current_password,"현재 비밀번호(를 입력해야 수정할 수 있습니다.)" ,class: "control-label"%><br />
                              <%= f.password_field :current_password, required: true, class: "form-control" %>
                              </div>
                            </div>
                          
                            <div class="actions">
                                <div class="center-btn">
                                <%= f.button :submit, "회원 정보 수정 하기" %>
                                </div>
                          <% end %>
                        <%= link_to "Back", :back %>  
                    </div> 
                  </div>
                </div>
              </div>
            </div>
                
                
      </div>
</div>
