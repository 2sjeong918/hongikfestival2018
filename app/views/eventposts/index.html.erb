

<div class="ban3 ban" id="ban3">
  <% if user_signed_in?%>
    <%= link_to '게시글 작성하기', new_eventpost_path, class: "newbtn" %>
  <% else %>
    <%= link_to '게시글 작성하기', new_user_session_path, class: "newbtn" %>
  <% end %>
</div>

<div class='h-container'>
      <div class="row">
          <% @eventposts.each do |eventpost| %>
            <div class = "col-sm-12 col-md-6 col-xl-3">
              <a href = "/eventposts/<%= eventpost.id %>">
                <div class="card h-card">
                  <div class="h-img-wrapper">
                    <img class="h-img" src="<%= eventpost.mainimage %>" alt="Card image cap">
                  </div>
                  <div class="card-body h-card-body">
                    <h5 class="h-card-title"><%= eventpost.title %></h5>
                    <p class="h-card-text"><%= eventpost.host %></p>
                    <p class="h-card-text"> <%= eventpost.runtime %></p>
                    <div href="#" class="btn h-more">MORE</div>
                  </div>
                </div>
              </a>
            </div>
          <% end %>
        
      </div>
  <br><br>

  <%= paginate @eventposts, window: 2 %>



</div>

